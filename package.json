{
  "name": "webcomunitaria",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "node backend/server.js",
    "build:front": "rm -rf backend/public && ng build --configuration production && mkdir -p backend/public && cp -r dist/webcomunitaria/* backend/public"
,
    "build:back": "cd backend && npm install",
    "build": "ng build",
    "build:railway": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "deploy": "echo Build Angular...; if (Test-Path backend/public) { Remove-Item -Recurse -Force backend/public }; ng build --configuration production; New-Item -ItemType Directory -Force -Path backend/public; Copy-Item -Recurse dist/webcomunitaria/* backend/public; echo Instalando dependencias Python...; pip install -r backend/requirements.txt; echo Iniciando backend Python...; python backend/app.py"


  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.10",
    "@angular/cli": "^20.3.10",
    "@angular/compiler-cli": "^20.3.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2"
  }
}
